<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/send_search_progress"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Searching for users..."
        android:layout_centerHorizontal="true"
        android:layout_below="@id/send_search_progress"
        android:layout_marginTop="20dp"
        android:id="@+id/connection_status_send"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/connections_list"
        android:layout_below="@id/connection_status_send">

    </ListView>

    <!--android:visibility="invisible"-->




    <Button style="@style/Widget.AppCompat.Button.Borderless.Colored"

        android:id="@+id/send_file_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Send"
        android:visibility="invisible"
        />

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/send_progress"
        android:layout_above="@id/send_file_button"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        />


    <Button style="@style/Widget.AppCompat.Button.Borderless.Colored"

        android:id="@+id/change_file_button"
        android:layout_below="@id/send_file_button"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Filename" />
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_file_button"
        android:layout_centerHorizontal="true"
        android:id="@+id/send_error_message"
        android:textColor="#ff0000"
        />
</RelativeLayout>